<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--
        id
        스크롤 뷰 : dt_scroll_view
        관광지 사진 : dt_tour_image
        관광지명 : dt_place_name
        관광지 주소 : dt_location
        스크랩 버튼 : dt_scrap_bt
        공유 버튼 : dt_share_bt
        개요 : dt_detail_info
        지도 : dt_map_image
        관광지 이용 안내 내용 : dt_service_guide
        댓글 내용 입력 : dt_comment_edit
        댓글 내용 등록 버튼 : dt_comment_btn
        댓글 리스트 뷰 : dt_review_list


    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#CCE3FF">

    </LinearLayout>

    <ScrollView
        android:id="@+id/dt_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">


            <ImageView
                android:id="@+id/dt_tour_image"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:contentDescription="TODO"
                android:src="@drawable/ex" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dt_place_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notobold"
                    android:gravity="center"
                    android:text="관광지 이름"
                    android:textColor="@color/black"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/dt_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notomedium"
                    android:gravity="center"
                    android:text="부산광역시 수영구 광안해변로 219"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/black_underline"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="290dp"
                        android:layout_height="match_parent" />

                    <!-- 스크랩 별은 클릭시 색이 있는 별로 바뀌도록 그림 이름 : "scrap_color" -->
                    <ImageButton
                        android:id="@+id/dt_scrap_bt"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="#00FFFFFF"
                        android:padding="3dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/scrap_line" />

                    <ImageButton
                        android:id="@+id/dt_share_bt"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="10dp"
                        android:background="#00FFFFFF"
                        android:padding="3dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/share" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/black_underline"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/highlight_underline"
                    android:fontFamily="@font/notomedium"
                    android:text="상세정보"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/dt_detail_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notoregular"
                    android:text="개요 내용 들어가기 ( 가능하면 더보기 기능 추가 ) "
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/dt_map_image"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/map_ex" />

                <TextView
                    android:id="@+id/dt_service_guide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/notoregular"
                    android:text="관광지 이용안내 내용 들어가기"
                    android:textColor="@color/black" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:text="댓글"
                    android:fontFamily="@font/notomedium"
                    android:textColor="@color/black"
                    android:textSize="17dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/black_border_line">

                    <EditText
                        android:id="@+id/dt_comment_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="댓글을 남겨주세요."
                        android:backgroundTint="@color/black"
                        android:textColorHighlight="#CCE3FF"
                        android:textCursorDrawable="@color/black"
                        android:fontFamily="@font/notoregular"
                        android:textSize="14dp"
                        android:inputType="textMultiLine"
                        android:maxLines="10"/>

                    <Button
                        android:id="@+id/dt_comment_btn"
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:background="@drawable/gray_btn"
                        android:layout_gravity="right"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="등록" />

                </LinearLayout>

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/dt_review_list"
                    android:divider="@drawable/black_underline"
                    android:dividerHeight="1dp"
                    />


            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>