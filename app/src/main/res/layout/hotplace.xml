<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!--   id 이름
    뒤로 가기  :  iv_hp_backicon
    메뉴  :  iv_hp_menuicon
    검색  :  iv_hp_searchicon
    스크랩  :  iv_hp_scrapicon
    홈  :  iv_hp_homeicon
    루트  :  iv_hp_rooticon
    마이페이지  :  iv_hp_mypageicon     -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#cae3ff"
        android:elevation="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/iv_hp_backicon"
            android:src="@drawable/back_icon" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="70dp"
            android:src="@drawable/logo" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/menu_icon"
            android:id="@+id/iv_hp_menuicon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/lv_hotplace"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center"
        android:elevation="15dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/iv_hp_searchicon"
            android:src="@drawable/search_icon"
            android:layout_marginRight="15dp" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/iv_hp_scrapicon"
            android:src="@drawable/scrap_icon"
            android:layout_marginRight="15dp" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/iv_hp_homeicon"
            android:src="@drawable/home_icon"
            android:layout_marginRight="15dp" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/iv_hp_rooticon"
            android:src="@drawable/root_icon"
            android:layout_marginRight="15dp" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/iv_hp_mypageicon"
            android:src="@drawable/mypage_icon" />

    </LinearLayout>

</LinearLayout>